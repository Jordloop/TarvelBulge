@{
    ViewData["Title"] = "TarvleBulge!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<TravelBlog.Models.Location>
 
<h2>Locations</h2>
<hr/>
<h4>@Html.DisplayNameFor(model => model.Name)</h4>
<ul>
    @foreach (var listLocation in Model)
    {
        <li>@Html.ActionLink(listLocation.Name, "Details", new { id = listLocation.LocationId }) | @Html.ActionLink("Edit", "Edit", new { id = listLocation.LocationId }) | @Html.ActionLink("Delete", "Delete", new { id = listLocation.LocationId })</li>   
    }
</ul>

<p>@Html.ActionLink("Add a Location", "Create")</p>