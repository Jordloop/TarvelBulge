@model IEnumerable<TravelBlog.Models.Experience>

@{
    ViewData["Title"] = "TarvelBulge Experiences!!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Story)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var listExperience in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(listExperience.Story, "Details", new { id = listExperience.ExperienceId }) 
            </td>
            <td>
                @Html.DisplayFor(modelExperience => listExperience.Location.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listExperience.ExperienceId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listExperience.ExperienceId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>